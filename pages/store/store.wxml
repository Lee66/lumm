<!--pages/store/store.wxml-->
<view class="container">

  <!--content-->
  <view class="goodswrap">
    <scroll-view scroll-y style="height:29em" class="menu">
      <view class="menu-item {{index === scrollNum ? 'selected':''}}" wx:for="{{menu}}" wx:key="unique" bindtap="selectMenuAct" data-id="{{index}}">
        {{item}}
      </view>
    </scroll-view>
    <scroll-view scroll-y style="height: 31.5em" class="goods" bindscroll="goodsScrollAct" scroll-top="{{scrollTop}}">
      <view class="box" wx:for="{{allGoods}}" wx:key="unique">
        <label class="typename">{{item.type}}</label>
        <view class="good" wx:for="{{item.goods}}" wx:for-item="good" wx:key="unique">
          <image src="{{good.logo}}"/>
          <view class="desc">
            <label class="title">{{good.name}}</label>
            <view class="sales">月售{{good.sale}} 好评率{{good.rate}}</view>
            <view class="price">¥ <label class="nowprice">{{good.nowPrice}}</label> </view>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>

</view>
